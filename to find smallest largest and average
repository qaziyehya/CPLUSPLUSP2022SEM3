#include <iostream>
using namespace std;
int main()
{
    int arr[50], n, i, max, min;
    float average,sum;
    cout << "Enter the no of numbers : ";
    cin >> n;
    cout << "Enter the number : ";
    for (i = 0; i < n; i++)
        cin >> arr[i];
    max = arr[0];
    for (i = 0; i < n; i++)
    {
        if (max < arr[i])
            max = arr[i];
    }
    min = arr[0];
    for (i = 0; i < n; i++)
    {
        if (min > arr[i])
            min = arr[i];
    }
    for (i = 0; i < n; i++)
    {
        sum += arr[i];
    }

    average = (float)sum / n;

    cout << "The largest number : \n"
         << max;
    cout << "\n";
    cout << "The smallest number : \n"
         << min;
    cout << "\n";

    cout << "Average ; \n " << average;
    return 0;
}
